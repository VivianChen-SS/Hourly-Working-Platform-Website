@model final_project.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "註冊帳號";
}

<h2>  </h2>
<link href="~/Content/SIGNIN.css" rel="stylesheet" />


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<br><br>


    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12 column">
                <div class="row clearfix">
                    <br>
                    <h3><b><font color="white">&nbsp;&nbsp;註冊帳號</font></b></h3>
                    @Html.ValidationSummary()
                    <hr />
                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;信箱</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" }) <br/>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                       
                    </div>
                    <br>

                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;密碼</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;密碼確認</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group_re1">
                        @*@Html.TextBoxFor(m => m.employer.EmployerID, new { @readonly = true, @Value = DateTime.Now.ToString("yyyyMMddHHmmss") })*@
                        @Html.TextBoxFor(m => m.employer.EmployerID, new { @type = "hidden", @Value = DateTime.Now.ToString("yyyyMMddHHmmssfff") })
                        @Html.TextBoxFor(m => m.employer.Id, new { @type = "hidden", @Value = "系統會幫你產生" })
                    </div>

                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;姓名</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @Html.TextBoxFor(m => m.employer.Name, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.employer.Name, "", new { @class = "text-danger" })
                    </div>
                    <br>

                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;性別</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @*@Html.DropDownListFor(model => model.employer.Gender, ViewBag.genderList as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })*@

                            @Html.DropDownList("employer.Gender", ViewBag.genderList as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <br>

                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;電話</b></h5>
                        <div class="col-md-10 register_inside_1">
                            @Html.TextBoxFor(m => m.employer.Tel, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.employer.Tel, "", new { @class = "text-danger" })
                    </div>
                    <br>

                    <div class="form-group_re1">
                        <h5><b>&emsp;&emsp;&emsp;&emsp;生日</b></h5>
                        <div class="col-md-6 birth">
                            @Html.TextBoxFor(model => model.employer.Birthday, new { type = "date" })
                        </div>
                        @Html.ValidationMessageFor(m => m.employer.Birthday, "", new { @class = "text-danger" })
                    </div>
                    <br>

                    <div class="form-group_re">
                        <h5><b>&emsp;&emsp;關於/其他</b></h5>
                        <div class="col-md-12 register_inside_2">
                            @Html.TextAreaFor(m => m.employer.Acknowledge, new { @class = "ckeditor", placeholder = "Acknowledge", style = "font-size: medium; font-weight: bold; width:0px" })
                          <br />
                          <div class="register_inside_3">
                              <input type="submit" class="btn btn-default btn-block " value="註冊" />
                          </div>
                           
                        </div>
                        
                    </div>

                    @*<div class="form-group_re">
                        <div class="col-md-offset-2 col-md-10 register_inside_3">
                            <input type="submit" class="btn btn-default btn-block" value="註冊" />
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/ckeditor/adapters/jquery.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

